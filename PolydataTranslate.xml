<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>vtkSurfaces</category>
  <title>PolydataTranslate</title>
  <version>1.0</version>

  <description>PolydataTranslate is a tool which translate a surface according to coordonate</description>
  <version>1.0</version>
  <contributor>Danaele Puechmaille, Martin Styner</contributor>
  <acknowledgements><![CDATA[This work is part of the National Alliance for Medical Image Computing (NAMIC), funded by the National Institutes of Health through the NIH Roadmap for Medical Research, Grants U01 MH070890 - U54 HD079124 - R01 MH091351.]]></acknowledgements> 

  <parameters>
	  <label>IO</label>
	  <description>Input/Output parameters</description>  
	  
	  
	  <string>
      <name>inputsurface</name>
      <label>inputsurface</label>
		  <flag>i</flag>
      <longflag>inputsurface</longflag>
		  <default></default>
      <description>Input surface to translate</description>
		</string> 
  
    <float>
      <name>xtranslation</name>
      <label>xtranslation</label>
      <flag>x</flag>
      <longflag>xtranslation</longflag>
      <description>X - translation </description>
    </float>

    <float>
       <name>ytranslation</name>
       <label>ytranslation</label>
       <flag>y</flag>
       <longflag>ytranslation</longflag>
       <description>Y - translation </description>
     </float>

  <float>
        <name>ztranslation</name>
        <label>ztranslation</label>
        <flag>z</flag>
        <longflag>ztranslation</longflag>
        <description>Z - translation </description>
      </float>

    <string>
      <name>outputsurface</name>
      <label>outputsurface</label>
      <flag>o</flag>
      <longflag>outputsurface</longflag>
      <default></default>
      <description>Output surface to translate</description>
    </string>

  </parameters>

</executable>
